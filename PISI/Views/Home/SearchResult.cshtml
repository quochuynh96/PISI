@model IEnumerable<PISI.WORD>

@{
    ViewBag.Title = "Kết quả tìm kiếm";
}

    <h2>Kết quả tìm kiếm</h2>

@if (Model.Count() == 0)
{
    <span>Không tìm thấy kết quả nào !</span>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Word_English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Word_IPA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Word_Vietnamese)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Word_English)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Word_IPA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Word_Vietnamese)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}
</table>
}
